doctype 5
html
	head
		title 
			| ISK @ #{request.host} : #{controller.controller_name.capitalize}
			=< controller.action_name.capitalize
		= stylesheet_link_tag :application, media: :all
		= javascript_include_tag :application
		= csrf_meta_tags
		link rel="icon" type="image/gif" href="/favicon.gif"
		link rel="icon" type="image/x-icon" href="/favicon.ico"
	body
		= render partial: "shared/display_warnings"
		div.top_navigation
			div.tabs 
				= navigation_links
			div.logout
				| I'm #{current_user.username}
				= link_to 'Logout', {controller: :logins, action: :destroy}, method: :delete, 
					class: 'logout'
			div.current_event Event: #{current_event.name}
		= render partial: 'navigation'
		div.flash
			div.error = flash[:error]
			div.notice = flash[:notice]
			div.warning = flash[:warning]
		div.content
			== yield